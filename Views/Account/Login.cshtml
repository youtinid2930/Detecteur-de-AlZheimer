    <script>
        // Animation pour les champs de formulaire au focus
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function () {
                this.parentElement.querySelector('.input-group-text').style.backgroundColor = 'rgba(52, 152, 219, 0.2)';
                this.parentElement.querySelector('.input-group-text').style.borderColor = '#3498db';
            });

            input.addEventListener('blur', function () {
                this.parentElement.querySelector('.input-group-text').style.backgroundColor = 'rgba(52, 152, 219, 0.1)';
                this.parentElement.querySelector('.input-group-text').style.borderColor = '#e2e8f0';
            });
        });
