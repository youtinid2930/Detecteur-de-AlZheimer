                const totalPatients = alzheimerPatients + healthyPatients + pendingPatients;
                
                document.querySelectorAll('.stats-number')[0].textContent = totalPatients;
                document.querySelectorAll('.stats-number')[1].textContent = alzheimerPatients;
                document.querySelectorAll('.stats-number')[2].textContent = healthyPatients;
